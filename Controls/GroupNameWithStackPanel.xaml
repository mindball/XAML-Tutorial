<Window x:Class="Controls.GroupNameWithStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls"
        mc:Ignorable="d"
        Title="GroupNameWithStackPanel" Height="450" Width="272">
    <StackPanel>
        <RadioButton Checked="SelectShoe" GroupName="ShoesGroup">Nike</RadioButton>
        <RadioButton Checked="SelectShoe" GroupName="ShoesGroup">Adidas</RadioButton>
        <RadioButton Checked="SelectShoe" GroupName="ShoesGroup">Puma</RadioButton>

        <RadioButton GroupName="Animals">Tiger</RadioButton>
        <RadioButton GroupName="Animals">Leon</RadioButton>
        <RadioButton GroupName="Animals">Hiena</RadioButton>
    </StackPanel>
</Window>
