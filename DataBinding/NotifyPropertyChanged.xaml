<Window x:Class="DataBinding.NotifyPropertyChanged"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="NotifyPropertyChanged" Height="450" Width="800">
    <StackPanel>
        <TextBox Text="{Binding Manufacture}" />
        <TextBox Text="{Binding Model}" />
        <Separator></Separator>
        <Button Name="AddCar" Click="AddCar_Click">Add car</Button>
        <Button Name="ChangeCar" Click="ChangeCar_Click">Change car</Button>
        <Button Name="DeleteCar" Click="DeleteCar_Click">Delete car</Button>
    </StackPanel>
</Window>
