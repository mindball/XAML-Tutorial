<Window x:Class="Layouts.CanvasWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d" d:DesignHeight="369.893" d:DesignWidth="553.925" >
    <Canvas>
        <Rectangle Name="Blue"  Canvas.Top="50" Canvas.Left="70" Canvas.Bottom="40" Fill="Blue" Height="50" Width="50"></Rectangle>
        <Rectangle Canvas.Top="80" Canvas.Left="100" Fill="Red" Height="50" Width="50"></Rectangle>
        <Rectangle Canvas.Top="100" Canvas.Left="130" Fill="Green" Height="50" Width="50"></Rectangle>
        <Rectangle Canvas.Top="130" Canvas.Left="160" Fill="Pink" Height="50" Width="50"></Rectangle>

        <Rectangle Panel.ZIndex="1" Canvas.Top="150" Canvas.Left="70" Canvas.Bottom="40" Fill="Yellow" Height="50" Width="50"></Rectangle>
        <Rectangle Canvas.Top="180" Canvas.Left="100" Fill="Red" Height="50" Width="50"></Rectangle>
        <Rectangle Canvas.Top="200" Canvas.Left="130" Fill="Green" Height="50" Width="50"></Rectangle>
        <Rectangle Canvas.Top="230" Canvas.Left="160" Fill="Pink" Height="50" Width="50"></Rectangle>

        <Button Click="MoveLeft" Height="20" Width="110" Content="Move left rectangle" Canvas.Left="10" Canvas.Top="10"></Button>
    </Canvas>

</Window>
