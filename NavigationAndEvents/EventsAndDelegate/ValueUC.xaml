<UserControl x:Class="NavigationAndEvents.EventsAndDelegate.ValueUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationAndEvents.EventsAndDelegate"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="ButtonPlusValue" Width="80" Height="60" Click="Plus_Button_Click">+10</Button>
            <Button Name="ButtonMinusValue" Width="80" Height="60" Click="Minus_Button_Click">-10</Button>
        </StackPanel>
        <Border Width="160" BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Left">
        </Border>
        <TextBox Name="ValueLabel" TextChanged="ValueLabel_TextChanged"
                 Width="160" Height="40" FontSize="20" Text="50" />
    </StackPanel>
</UserControl>
