<Window x:Class="RoutedEventArgsExample.BubbleStrategy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutedEventArgsExample"
        mc:Ignorable="d"
        Title="BubbleStrategy" Height="450" Width="800">
    <Border x:Name="BorderParrent" Height="50" Width="500" BorderBrush="Gray" BorderThickness="1" Button.Click="BorderClickHandler">
        <StackPanel Name="StP"  Background="LightGray" Orientation="Horizontal" >
            <Button Name="YesButton" Width="Auto" >Yes</Button>
            <Button Name="NoButton" Width="Auto" >No</Button>
            <Button Name="CancelButton" Width="Auto" >Cancel</Button>
            <TextBlock Name="text1">Start by clicking the button below</TextBlock>
            <Button Name="b3" Click="MakeButton">Make new button and add handler to it</Button>
        </StackPanel>
    </Border>
</Window>
